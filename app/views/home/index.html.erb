<div id="main" class="min-h-screen bg-gradient-to-br from-sky-100 via-sky-200 to-sky-300 flex items-center justify-center py-10 px-4 text-slate-900">
  <div
    class="w-full max-w-4xl mx-auto"
    data-controller="home"
  >
    <header class="text-center mb-6 text-slate-900">
      <div id="logo" class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-sky-500 mb-4">
        <img alt="logo cloud-sum" src="https://unpkg.com/lucide-static/icons/cloud-sun.svg" class="drop-shadow h-8 w-8 text-primary-foreground brightness-0 invert" />
      </div>
      <h1 class="text-4xl font-bold tracking-tight">Weather Finder</h1>
      <p class="mt-2 text-base text-slate-600">Search any address to see the current weather</p>
    </header>

    <div class="relative mx-auto mb-5 max-w-2xl">
      <input
        type="text"
        name="address_input"
        id="address-input"
        placeholder="Search for an address or ZIP..."
        class="w-full py-3 px-4 rounded-xl bg-white/90 text-slate-900 shadow-lg placeholder-slate-400 outline-none transition focus:ring-2 focus:ring-sky-400 focus:shadow-xl"
        data-home-target="input" data-action="input->home#search keydown->home#navigate"
        autocomplete="off"
        role="combobox"
        aria-autocomplete="list"
        aria-controls="address-list"
        aria-expanded="false"
      />
      <ul
        id="address-list"
        data-home-target="list"
        class="hidden absolute top-full mt-2 left-0 right-0 list-none m-0 p-2 bg-white rounded-xl shadow-2xl z-10 max-h-72 overflow-auto"
        role="listbox"
      ></ul>
    </div>

    <section
      class="weather-card relative mx-auto mt-5 p-6 bg-white/90 backdrop-blur-md rounded-2xl shadow-2xl overflow-hidden"
      data-home-target="card"
      aria-live="polite"
    >
      <div class="relative">
        <span
          data-home-target="cacheBadge"
          class="hidden absolute -top-2 -right-2 text-xs font-medium px-2 py-1 rounded-full bg-green-100 text-green-800 border border-green-300 shadow-sm"
          title="This result is served from cache"
          aria-live="polite"
        >Cached</span>
        <div class="flex flex-col sm:flex-row gap-6 items-start sm:items-center justify-between">
          <div class="flex-1">
            <div class="text-xl font-bold" data-home-target="location">Search a place</div>
            <div class="text-slate-600 mt-1" data-home-target="desc">and get beautiful weather</div>
            <div class="mt-2 flex gap-3 text-slate-600 text-sm">
              <span data-home-target="feels"></span>
              <span data-home-target="humidity"></span>
              <span data-home-target="pressure"></span>
            </div>
          </div>
          <div class="flex items-center gap-3 self-stretch sm:self-auto justify-between w-full sm:w-auto sm:justify-start">
            <img alt="weather icon" data-home-target="icon" class="w-16 h-16 drop-shadow"/>
            <div class="text-5xl font-extrabold tracking-tight" data-home-target="temp">--</div>
            <div class="flex gap-2 text-slate-600 -mt-1 justify-end">
              <span data-home-target="min"></span>
              <span data-home-target="max"></span>
            </div>
          </div>
        </div>
      </div>

      <div class="loader hidden absolute inset-0 grid place-items-center bg-white/60" data-home-target="loader">
        <div class="spinner h-9 w-9 rounded-full border-2 border-slate-300/70 border-t-sky-500 animate-spin"></div>
      </div>
    </section>
  </div>
</div>

<style>
.weather-card { opacity: 0; transform: translateY(0.5rem); transition: opacity .4s ease, transform .4s ease; }
.weather-card.show { opacity: 1; transform: translateY(0); }
.weather-card.loading { filter: grayscale(0.2) contrast(0.95); }
.combobox-item.active { background-color: #f2f6fb; }
.hidden { display: none; }
</style>